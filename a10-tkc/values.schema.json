{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["thunder"],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 10
    },
    "image": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "repository": {
          "type": "string",
          "minLength": 1
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        },
        "tag": {
          "type": "string"
        }
      }
    },
    "thunder": {
      "type": "object",
      "required": ["host", "username", "password"],
      "properties": {
        "host": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9.-]+$"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "username": {
          "type": "string",
          "minLength": 1
        },
        "password": {
          "type": "string",
          "minLength": 1
        },
        "protocol": {
          "type": "string",
          "enum": ["http", "https"]
        },
        "partition": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "tkc": {
      "type": "object",
      "properties": {
        "logLevel": {
          "type": "string",
          "enum": ["DEBUG", "INFO", "WARNING", "ERROR"]
        },
        "watchNamespaces": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
          }
        }
      }
    },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "minAvailable": {
          "type": "integer",
          "minimum": 1
        },
        "maxUnavailable": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
